Maximum 69 Number





class Solution {
    public int maximum69Number(int num) {

        char[] nums = String.valueOf(num).toCharArray();

        int i = 0;
        while (i < nums.length) {
            if (nums[i] == '6') {
                nums[i] = '9';
                break;
            }
            i++;
        }
        num = 0;

        for (char c : nums) {
            num = num * 10 + (c - '0');
        }
        return num;

    }
}
