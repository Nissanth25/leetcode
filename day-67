Number of Zero-Filled Subarrays




  class Solution {
    public long zeroFilledSubarray(int[] nums) {

        long count = 0;
        long total = 0;

        for ( int i =0; i<nums.length;i++){
            if(nums[i] == 0){
                count++; //Number of continous zeros
                total += count;
            }
            else { // If they are not zeros
                count = 0;
            }
        }
        return total;
        
    }
}
